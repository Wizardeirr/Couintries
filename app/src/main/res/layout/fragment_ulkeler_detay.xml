<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".View.UlkelerDetayFragment">

        <ImageView
            android:id="@+id/countryImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            android:minHeight="250dp"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:paddingTop="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/name_text"
                android:layout_below="@+id/countryImage"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="5dp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capital"
                android:id="@+id/capital_text"
                android:layout_below="@id/name_text"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_margin="5dp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Region"
                android:id="@+id/region_text"
                android:layout_below="@+id/capital_text"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_margin="5dp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency"
                android:id="@+id/currency_text"
                android:layout_below="@id/region_text"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_margin="5dp">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language"
                android:id="@+id/language_text"
                android:layout_below="@id/currency_text"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_margin="5dp">

            </TextView>












    </RelativeLayout>
</layout>